<Window x:Class="SqlAppTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация/Вход" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Height="30"/>

            <TextBlock Text="Пароль:" Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="Войти"
                    Height="35"
                    Margin="0,20,0,0"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>